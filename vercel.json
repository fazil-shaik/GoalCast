{
  "version": 2,
  "builds": [
    {
      "src": "client/**/*",
      "use": "@vercel/static",
      "config": {
        "mimeTypes": {
          ".ico": "image/x-icon",
          ".png": "image/png",
          ".js": "application/javascript",
          ".mjs": "application/javascript",
          ".ts": "application/javascript",
          ".tsx": "application/javascript",
          ".jsx": "application/javascript"
        }
      }
    },
    {
      "src": "server/index.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["server/**/*"]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server/index.ts"
    },
    {
      "src": "/src/(.*)",
      "dest": "/client/src/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/client/$1"
    }
  ]
} 